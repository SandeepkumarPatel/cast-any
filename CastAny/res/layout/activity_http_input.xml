<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_http_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Please enter HTTP Server information" />

    <EditText
        android:id="@+id/editText_http_server"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_http_info"
        android:layout_marginTop="30dp"
        android:inputType="textUri"
        android:hint="http server address"
        android:text="http://192.168.0.12:8080">
    </EditText>

    <EditText
        android:id="@+id/editText_http_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_http_server"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:hint="username if any" />

    <EditText
        android:id="@+id/editText_http_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_http_username"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:hint="password if any" />
    
    <Button
        android:id="@+id/button_connect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Connect" />

</RelativeLayout>